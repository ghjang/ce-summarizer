{
    "manifest_version": 3,
    "name": "summarizer",
    "version": "0.2",
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}
